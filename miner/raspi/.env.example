# Namespace
DDNS_NS_ID=1

# Wire protocol listener ports (host)
DDNS_LISTEN_UDP_PORT=5353
DDNS_LISTEN_TCP_PORT=5353

# GUI
DDNS_GUI_PORT=8080

# Optional peer pointer for watchdog/ipfs-anchor
DDNS_PEER=edge-node:5353

# EVM chain commitments (recommended for verification)
EVM_RPC_URL=https://your-rpc.example
EVM_CHAIN_ID=1
COMMITMENTS_CONTRACT=0xYourContractAddress

# IPFS gateway (anchor-only redundancy)
IPFS_GATEWAY_URL=https://ipfs-gateway.example
# Optional header if your gateway/pinner needs auth:
IPFS_AUTH_HEADER="Authorization: Bearer YOUR_TOKEN"

# Firewall override (optional)
# DDNS_LAN_CIDR=192.168.1.0/24
# DDNS_WIRE_PORT=5353
