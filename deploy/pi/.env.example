# Interfaces (Pi OS: eth0 is wired; USB LAN is often eth1 or enxXXXX)
WAN_IF=eth0
LAN_IF=eth1

# LAN subnet for the segment behind the Pi
LAN_CIDR=192.168.50.1/24
LAN_IP=192.168.50.1
LAN_NET=192.168.50.0/24
DHCP_RANGE_START=192.168.50.50
DHCP_RANGE_END=192.168.50.200
DHCP_LEASE=12h

# Gateway container port (container listens on 8054; host binds to 127.0.0.1:8054)
GATEWAY_HTTP_PORT=8054

# Gateway recursive quorum upstreams
RECURSIVE_UPSTREAMS=https://cloudflare-dns.com/dns-query,https://dns.google/dns-query
RECURSIVE_TIMEOUT_MS=2000
RECURSIVE_QUORUM_MIN=2
RECURSIVE_OVERLAP_RATIO=0.34

# Gateway cache policy (container writes to /data)
CACHE_PATH=/data/rrset.json
CACHE_MAX_ENTRIES=50000
STALE_MAX_S=1800
PREFETCH_FRACTION=0.1
TTL_CAP_S=300
