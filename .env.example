# Resolver / Name Gateway
PORT=8054
UPSTREAM_DOH_URL=https://cloudflare-dns.com/dns-query
REQUEST_TIMEOUT_MS=5000
CACHE_TTL_MAX_S=3600
HOST=0.0.0.0
LOG_LEVEL=quiet
RESOLVER_PRIVATE_KEY_HEX=
RESOLVER_PUBKEY_HEX=

# Gated namespaces
GATED_SUFFIXES=.premium
VOUCHER_MODE=stub
VOUCHER_SECRET=

# Registry (.dns)
REGISTRY_ENABLED=0
REGISTRY_PATH=registry/snapshots/registry.json

# Credits coordinator
AUTH_CHAIN=solana
MAX_BODY_BYTES=1000000
ALLOW_CORS=0
ADMIN_TOKEN=
SESSION_TTL_MS=600000
PUBLIC_LEDGER_ENABLED=0

# Payments (mock provider only in MVP)
PAYMENTS_PROVIDER=mock
PAYMENTS_MOCK_ENABLED=0

# Passport (EVM binding)
PASSPORT_ENABLED=0
PASSPORT_CHAIN=base
PASSPORT_TOKEN_TYPE=erc721
PASSPORT_CONTRACT=0x0000000000000000000000000000000000000000

# ENS
ENABLE_ENS=0
ETH_RPC_URL=
ENS_NETWORK=mainnet

# SNS
ENABLE_SNS=0
SOLANA_RPC_URL=https://api.devnet.solana.com
SNS_CLUSTER=devnet
